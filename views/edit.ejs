<%- include("partials/header.ejs") %>

<div class="container">

<div class="row my-5 bookDetails border shadow-lg rounded d-flex flex-column">

    <div class="d-flex py-2 my-2 item">

        <% if (book.coperta) { %>

        <img src=<%= book.coperta %> alt="bookCover" class="bookCover">

        <% } else { %>

            <img src="images/blackCover.jpeg" alt="bookCover" class="bookCover">

        <% } %>

        <div class="info col-sm-12 col-md-4 d-flex flex-column  px-2 flex-grow-1">

            <h2><%= book.title %></h2>
            <h3><%= book.autor %></h3>

            <form class="my-1 actionForm" method="post">
                <input type="hidden" name="id" value=<%=book.id %>>
                <div class="form-floating w-100 mb-3">
                    <textarea class="form-control" placeholder="Adauga o descriere" name="descriere" id="floatingTextarea"><%= book.descriere %></textarea>
                    <label for="floatingTextarea">Descriere</label>
                  </div>
                <input type="submit" class="btn btn-success" value="Submit" formaction="/submitEdit">
                <input type="submit" class="btn btn-secondary" value="Cancel" formaction="/cancelEdit">
            </form>
           
        </div>

        <div class="d-flex flex-column align-items-start">

        

    </div>


    </div>

</div>


</div>
<%- include("partials/footer.ejs") %>